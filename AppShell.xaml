<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="TestMauiTabs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TestMauiTabs"
    Shell.FlyoutBehavior="Disabled"
    Title="TestMauiTabs">

    <TabBar>
        <ShellContent Title="Tab 1" Icon="dashboard.png" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Tab 2" Icon="dashboard.png" ContentTemplate="{DataTemplate local:Page2}" />
        <ShellContent Title="Tab 3" Icon="dashboard.png" ContentTemplate="{DataTemplate local:Page3}" />
    </TabBar>
</Shell>